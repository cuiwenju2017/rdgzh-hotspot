<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <include
        android:id="@+id/ic"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ic"
        android:layout_above="@+id/rg"
        />

    <ImageView
        android:id="@+id/Shzijia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rg"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-25dp" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/dhlqianhui"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/today_tab"
            style="@style/Custom.TabRadioButton"
            android:background="#00000000"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_sign_selector"
            android:textSize="0dp" />

        <RadioButton
            android:id="@+id/record_tab"
            style="@style/Custom.TabRadioButton"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/tab_record_selector"
            android:textSize="0dp" />

        <RadioButton
            android:id="@+id/tabs_rg"
            style="@style/Custom.TabRadioButton"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@mipmap/ic_publish"
            android:text="发布" />

        <RadioButton
            android:id="@+id/contact_tab"
            style="@style/Custom.TabRadioButton"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/tab_contact_selector"
            android:textSize="0dp" />

        <RadioButton
            android:id="@+id/settings_tab"
            style="@style/Custom.TabRadioButton"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/tab_setting_selector"
            android:textSize="0dp" />
    </RadioGroup>

</RelativeLayout>