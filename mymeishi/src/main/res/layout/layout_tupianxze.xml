<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout

    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
        <LinearLayout
            android:id="@+id/lin_cccc"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <CheckBox
                android:button="@null"
                android:id="@+id/tu_iv_select"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/yangshibutton"
                />

        </LinearLayout>




    <ImageView
     android:id="@+id/dialog_tupxz_iv_fm"
     android:layout_width="90dp"
        android:layout_marginLeft="15dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/lin_cccc"
    />
    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@id/dialog_tupxz_iv_fm">
    <TextView
    android:id="@+id/tupxzdiialog_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="香辣包子"
    android:textColor="#666666"
    android:textSize="15sp" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <TextView
    android:id="@+id/tupxzdialog_tv_num"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:text="1"
    android:textColor="#666666"
    android:textSize="13sp" />
    </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>


    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="15dp"
    android:background="@color/colorLightGray" />

    </LinearLayout>



</RelativeLayout>
