<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="125dp"
        android:layout_height="125dp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="香浓韭菜大肉包"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/viewfinder_laser"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_add_to_shop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_add_to_shop" />

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_add_to_shop"
            android:background="@drawable/ic_shop_gwc" />

        <Button
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_shop"
            android:background="#e7e7e7"
            android:text="立即购买"
            android:textColor="#ff0000"
            android:textSize="8sp" />
    </RelativeLayout>
</LinearLayout>