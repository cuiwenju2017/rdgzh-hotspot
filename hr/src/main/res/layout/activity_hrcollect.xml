<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hr_white"
    android:orientation="vertical">

    <include layout="@layout/include_hr_title_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.12"
        android:background="@color/black" />

    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/xtl_my_collect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:xTabDividerWidthWidthText="true"
        app:xTabIndicatorColor="#FF0000"
        app:xTabIndicatorHeight="2dp"
        app:xTabSelectedTextColor="#FF0000"
        app:xTabTextColor="@color/color_text"
        app:xTabTextSize="15sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_my_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>